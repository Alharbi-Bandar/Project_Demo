

import RPi.GPIO as GPIO
import time
import requests
import smbus

GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)

GPIO.setup(4, GPIO.IN) #PIR Motion sensor
GPIO.setup(12, GPIO.IN) #Door sensor
GPIO.setup(16, GPIO.OUT) #Buzzer
led2 = 27 # red light
led1 = 26 # green light
GPIO.setup(led2,GPIO.OUT)
GPIO.setup(led1,GPIO.OUT)

address = 0x05
Communicate = smbus.SMBus(1)


try:
    time.sleep(2) 
    print ("Baby Care Security System is Activated")
    while True:
        Motion=GPIO.input(4)
        Magnatic=GPIO.input (12)
        if Motion==1 and Magnatic==1:
            Communicate.write_i2c_block_data(address,0x01,[0,0,0,0,1])
            GPIO.output(16, True)
            GPIO.output(led2,GPIO.HIGH)
            GPIO.output(led1,GPIO.LOW)
            print("The Door is Opened")
           
            time.sleep(9)  
            
        else :
            print("No Detected")
            GPIO.output(16, False)
            GPIO.output(led1,GPIO.HIGH)      
            GPIO.output(led2,GPIO.LOW)
            time.sleep(0.1)
            time.sleep(0.1)
            time.sleep(0.1)
            time.sleep(0.1)
           
            
except:
    
    GPIO.cleanup()
